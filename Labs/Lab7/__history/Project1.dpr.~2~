program Project1;

{$APPTYPE CONSOLE}
 //ƒана целочисленна€ матрица размера B(n,m),(n,m<=10).
 //ѕреобразовать ее, переставив строки в пор€дке
 //возрастани€ их наименьших элементов.
uses
  SysUtils;
const
n = 10;
m = 10;
type
matrix = array[1..n,1..m] of integer;
procedure input(var b: matrix);
var i,j: integer;
begin
  randomize;
  for i:=1 to n do
    for j:=1  to m do
      b[i,j]:=random(n)-(m div 2);
end;
procedure output(b: matrix);
var i,j: integer;
begin
  for i:=1 to n do
    begin
    for j:=1  to m do
      write(b[i,j],' ');
    writeln;
    end;
end;
procedure sort(var b:matrix);
var
i,j,temp,min: integer;
a: array[1..n] of integer;
begin
for i := 1 to n do
  begin
    min:=a[i,1];
    for j := 1 to m do
      if a[i,j]<min then
      min:=a[i,j];
    a[i]:=min;
  end;
  

end;



Var
b: matrix;
begin
input(b);
output(b);
writeln;
sort(b);
output(b);

Readln;
End.
