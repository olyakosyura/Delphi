program Project1;

{$APPTYPE CONSOLE}

uses
  SysUtils;

type
TBook = record
  Name: string[50];
  Author: string[50];
  Year: integer;
end;

var
F: file of TBook;
Temp: Tbook;
FileName, NewFile: string;
FText: TextFile;
I: integer;

begin
FileName:='input.dat';
NewFile:='output.txt';
Assignfile(F,FileName);
Assignfile(FText,NewFile);
Reset(F);
Rewrite(FText);

Writeln('Old File:');
for I := 1 to filesize(F) do
  begin
   read(f,temp);
   writeln(temp.Name:50, temp.Author:20, temp.Year:10);
  end;


Writeln('New File(output.txt):');

for I := FileSize(F)-1 downto 0 do
  begin
   Seek(F,i);
   read(f,temp);
   writeLN(ftext, temp.Name:50, temp.Author:20, temp.Year:10);
   writeln(temp.Name:50, temp.Author:20, temp.Year:10);

  end;

  closefile(f);
  closefile(ftext);
  readln;


end.
